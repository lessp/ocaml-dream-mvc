let make ~(article: Models.Article.t) () =
  let link = "/articles/" ^ article.id in

  <div class_="flex flex-col gap-4 items-start">
    <a href=link>
      <h2 class_="text-xl font-bold"> (JSX.string article.title) </h2>
    </a>
    <p class_="text-gray-600"> (JSX.string article.content) </p>
    <a href=link class_="text-gray-900 font-medium hover:underline"> (JSX.string "Read article") </a>
  </div>
